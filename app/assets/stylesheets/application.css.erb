* {
  box-sizing: border-box;
}

html, body {
  margin: 0;
  padding: 0;
  height: 100%;
  width: 100%;
  background: url('<%= asset_path("background.jpg") %>') no-repeat center center fixed;
  background-size: cover;
  font-family: Arial, sans-serif;
  color: rgb(255, 162, 0);
  text-align: center;
}

h1 {
  margin-top: 30px;
  font-size: 3rem;
}

form {
  margin: 20px auto;
  width: 300px;
}

input {
  width: 100%;
  margin-bottom: 10px;
  padding: 8px;
}

ul {
  list-style: none;
  padding: 0;
}
